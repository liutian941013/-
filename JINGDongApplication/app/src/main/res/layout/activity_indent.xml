<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liufan.jingdongapplication.view.IndentActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/indent_bt_tj"
            android:textColor="#000000"
            android:text="添加"
            android:textSize="18dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"/>

        <Button
            android:id="@+id/indent_bt_bj"
            android:textColor="#000000"
            android:text="编辑"
            android:textSize="18dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"/>
    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="收货地址:"
    android:textColor="#000000"
    android:textSize="25dp" />
    <TextView
        android:id="@+id/indent_te"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入收货地址"
        android:textSize="20dp"
        android:text="北京市"/>
    <ImageView
        android:id="@+id/indent_iv"
        android:layout_width="match_parent"
        android:layout_height="220dp"></ImageView>
    <TextView
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/indent_te1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/indent_te2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:gravity="right"
            android:id="@+id/indent_te3"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="25px"
            android:id="@+id/indent_te4"
            android:layout_width="100dp"
            android:textColor="#ff00"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/indent_bt_qr"
        android:textColor="#000000"
        android:background="@color/colorAccent"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="确定购买"
        android:layout_gravity="right"/>
</LinearLayout>
